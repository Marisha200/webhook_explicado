            </section>

            <!-- INTERACTIVE SIMULATION -->
            <section id="simulation" class="card p-6 md:p-8">
                <h2 class="text-3xl font-bold text-center mb-8 text-gray-800">Simulaci贸n del Flujo de un Webhook</h2>

                <!-- PHASE 1 -->
                <div class="mb-10 pb-8 border-b border-gray-200">
                    <h3 class="text-xl font-semibold mb-4 text-center">Fase 1: La Configuraci贸n (Acuerdo de Confianza)</h3>
                    <div class="flex justify-center mb-6">
                        <button id="config-btn" class="btn btn-primary shadow-lg">1. Iniciar Configuraci贸n</button>
                    </div>
                    <p id="config-status" class="text-center text-gray-500 h-6 transition-opacity duration-500 opacity-0">Generando URL y Token Secreto...</p>
                </div>

                <!-- SIMULATION AREA -->
                <div class="relative grid md:grid-cols-2 gap-8 items-start min-h-[300px]">
                    <!-- SYSTEM A -->
                    <div id="system-a-card" class="card p-6 border-2 border-transparent">
                        <h4 class="font-bold text-lg mb-4 text-center">Sistema A (Tienda Online)</h4>
                        <div class="bg-gray-100 p-4 rounded-lg">
                            <p class="text-sm font-semibold">Configuraci贸n Recibida:</p>
                            <div class="mt-2 space-y-2 text-xs font-mono break-all">
                                <p><strong>URL a notificar:</strong> <span id="url-display" class="text-gray-500">A煤n no configurada</span></p>
                                <p><strong>Token Secreto:</strong> <span id="token-display" class="text-gray-500">A煤n no configurado</span></p>
                            </div>
